@model List<HousingOffersDisplayModel>


<div class="panel panel-default mt-5" style="width:auto">
    <div class="panel-heading">
        Ogłoszenia
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    Zdjęcie
                </th>
                <th>
                    Tytuł ogłoszenia
                </th>
                <th>
                    Miasto
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="data:@item.ImageFormat;base64,@item.Image" width="200"/>
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.City
                    </td>
                    <td>
                        @Html.ActionLink("Modyfikuj", "Modify", new{offerId=item.Id})
                    </td>
                    <td>
                        @Html.ActionLink("Usuń", "Delete", new{offerId=item.Id})
                    </td>
                </tr>
            }
        </table>
    </div>

</div>